{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "products": {
      "type": "json",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "paid",
        "failed",
        "refunded"
      ],
      "default": "pending",
      "options": {
        "index": true
      }
    },
    "totalAmount": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "EUR"
    },
    "customerEmail": {
      "type": "email",
      "options": {
        "index": true
      }
    },
    "customerName": {
      "type": "string"
    },
    "customerPhone": {
      "type": "string"
    },
    "billingAddress": {
      "type": "json"
    },
    "shippingAddress": {
      "type": "json"
    },
    "notes": {
      "type": "text"
    },
    "metadata": {
      "type": "json"
    },
    "orderedAt": {
      "type": "datetime"
    }
  }
}
