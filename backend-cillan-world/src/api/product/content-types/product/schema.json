{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productName": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "productName",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "integer"
    },
    "isFeatured": {
      "type": "boolean"
    },
    "price": {
      "type": "decimal"
    },
    "color": {
      "type": "string"
    },
    "details": {
      "type": "text"
    },
    "details_en": {
      "type": "text"
    },
    "materials": {
      "type": "text"
    },
    "materials_en": {
      "type": "text"
    },
    "garmentCare": {
      "type": "text"
    },
    "garmentCare_en": {
      "type": "text"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products"
    },
    "imageUrl": {
      "type": "json"
    }
  }
}
